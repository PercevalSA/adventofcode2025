{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Solve all puzzles",
            "type": "shell",
            "command": "uv",
            "args": ["run", "main.py"],
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "pytest: Run all tests",
            "type": "shell",
            "command": "uv",
            "args": ["run", "pytest", "-v"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "pytest: Run tests with coverage",
            "type": "shell",
            "command": "uv",
            "args": ["run", "pytest", "--cov=.", "--cov-report=term-missing", "-v"],
            "group": "test",
            "problemMatcher": ["$python"]
        },
        {
            "label": "pytest: Run tests in watch mode",
            "type": "shell",
            "command": "uv",
            "args": ["run", "pytest", "-v", "--tb=short", "-x", "--lf"],
            "group": "test",
            "problemMatcher": ["$python"],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
